<div id="metadata" class="container">
	<div id="hidden_node"></div>
	<!-- Optional, not needed if editing single files -->
	<div id="topic_tree_selector"></div>
	{{#if multiple_selected}}
		<div class="section pull-left tree_section">
			<ul class="list-unstyled" id="uploaded_list">
			{{#each node_list}}
				<li id="item_{{cid}}" class="uploaded disable_on_error"><li>
			{{else}}
				<li><h5 id="none-in-metadata-form">&nbsp;You didn't add<br>any content</h5></li>
			{{/each}}
			</ul>
			{{#if allow_add}}
				{{#if modal}}
					<a class="action-text" id="add_more_button">ADD MORE</a>
				{{/if}}
			{{/if}}
		</div>
	{{/if}}
	<nav>
		<a class="btn btn-tab" id="metadata_details_btn">Details</a>
		<a class="btn btn-tab" id="metadata_preview_btn">Preview</a>
	</nav>
	<div  class="metadata_panel">
		<div id="metadata_edit_details" class="input_area">
			<div class="section pull-left edit_details_section">
				<div id="edit_details_wrapper">
					<div id="editmetadata_format_section">
	                </div>
					<h4>Title<label class="required">*<span id="title_error"></span></label></h4>
					<input type="text" id="input_title" class="disable-on-edit upload_input" placeholder="Enter a title" maxlength="200" required/>
					<h4 class="content_nodes_only">
						License
						<select id="license_select">
	                        <option selected disabled value=null>-- Select a License --</option>
	                        {{#each licenses}}
	                            <option value={{id}}>{{license_name}}</option>
	                        {{/each}}
	                    </select>
	                    <span class="glyphicon glyphicon glyphicon-info-sign" aria-hidden="true" id="license_about"></span>
					</h4>
					<h4>Description <i id="description_counter" class="pull-right">{{word_limit}} chars left</i></h4>
					<textarea id="input_description" class="disable-on-edit upload_input" placeholder="Enter a description of your content" maxlength={{word_limit}}/></textarea>

					<h4>Tags (optional) <span id="tag_error">Invalid characters found.</span></h4>
					<input type="text" id="tag_box" class="tag_input" placeholder="Press 'Enter' to add tag" maxlength="30"/>
					<div class="container-fluid">
						<div class="row" id="tag_area">
						</div>
					</div>
				</div>
			</div>
			<!--
			<div class="section construction pull-right">
				<h4>Related Content</h4>
				<div class="content-relation-area">
				</div>
				<br/>
				<h4>Prerequisite Content</h4>
				<div class="content-relation-area">
				</div>
			</div>
			-->
		</div>

		<div id="metadata_preview" class="container-fluid">

		</div>
	</div>
	<br/>
	<div class="metadata_save_buttons">
		<div class="pull-right">
			<span id="validating_text">Validating...</span>
			<!-- <a id="upload_save_button" class="disable_on_error editmetadata_save">SAVE</a> -->
			<a class="btn btn-default" id="upload_save_finish_button" class="disable_on_error editmetadata_save">SAVE &amp; FINISH</a>
		</div>
	</div>
</div>