<div class="format_item row">
    <div class="inline col-xs-3 preview_section text-center">
        <img alt="No Preview Available" src="{{thumbnail}}"/>
    </div>
    <div class="inline col-xs-8 format_section">
        <input type="text" placeholder="Title *" class="name_content_input"/>
        {{#if initial}}
	        <h5 class="init_format_area">
	        	<span class="init_format_name truncate">{{node.attributes.title}}Format Name </span>
	        	<span class="init_format_size">({{node.attributes.total_file_size}}##MB)</span>
	        	<select class="format_options_dropdown pull-right">
	        		<option selected disabled>-- Select a Format --</option>
	        		{{#each presets}}
	        			<option value="{{name}}">{{name}}</option>
	        		{{/each}}
	        	</select>
	        </h5>
        {{else}}
	        <h4 class="format_editor_header">
	        	Formats
	        	<span class="format_counter badge">0</span>
	        	<span class="glyphicon glyphicon-triangle-bottom expand_format_editor" aria-hidden="true"></span>
	        </h4>
        	<div class="format_editor_list">
	        	{{#each presets}}
		        	<div class="row format_editor_item">
		        		<div class = "col-xs-3 format_editor_format_name" >{{name}}</div>
	        			<div class = "col-xs-9" >
		        			{{#if format_attached}}
		        				<span class="format_editor_file_name truncate">{{format_attached.attributes.title}}</span>
		        				<em class="format_editor_selected_size">({{format_attached.attributes.total_file_size}})</em>
		        				<span class="glyphicon glyphicon-remove pull-right format_editor_remove" aria-hidden="true"></span>
		        			{{else}}
		        				<a class="action-text add_format_button {{id}}">+ ADD</a>
		        			{{/if}}
	        			</div>
        			</div>
        		{{/each}}
        	</div>
		{{/if}}
    </div>
    <div class="inline col-xs-1 remove_section">
        <span class="glyphicon glyphicon-remove pull-right" aria-hidden="true"></span>
    </div>
</div>