<div id="clipboard" class="pull-right">
	<div class="clipboard_header">
		<h3>
			<span class="pull-left glyphicon glyphicon-folder-open" aria-hidden="true"></span>
			Editing Content
			<span class="toggle_clipboard pull-right glyphicon glyphicon-remove" aria-hidden="true"></span>
		</h3>
	</div>
	<div id="clipboard_content">
		<h6 class="error" id="name_err">Please input a valid name</h6>
		<input type="text" id="content_name" value="{{file.title}}" placeholder="Name"/>
		<input type="text" id="content_author" value="{{file.author}}" placeholder="Author"/>
		<input type="text" id="content_license" value="{{file.license.name}}" placeholder="License"/>
		<label for="content_tags">Tags</label><input type="text" class="content_tags" placeholder="Tags (press 'Enter' to add tag)"/>
		<textarea id="file_description" placeholder="Description" maxlength="{{limit}}">{{file.description}}</textarea>
		<div class="char_counter" align="right"><span class="counter">{{limit}}</span> Chars Left</div>
		<div class="text-center"> 
			<a class="btn btn-link clipboard_update_file pull-right">Update</a>
		</div>
	</div>
</div>